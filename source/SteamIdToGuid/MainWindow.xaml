<Window x:Class="SteamIdToGuid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam ID To Guid" Height="196" Width="284" ResizeMode="NoResize" Icon="ccg.ico" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Steam ID" />
            <TextBox x:Name="SteamIdTB" />
            <Button Click="ConvertSteamId" Content="Convert" Margin="50,10,50,0" />
            <Label Content="GUID" />
            <TextBox x:Name="GuidTB" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
